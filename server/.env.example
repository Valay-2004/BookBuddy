# === Database ===
# For local development (individual vars):
DB_USER=postgres
DB_HOST=localhost
DB_PORT=5432
DB_NAME=your_database_name
DB_PASSWORD=your_database_password

# For Supabase / Render (connection string):
# Use the SESSION POOLER URL from Supabase (port 6543, IPv4).
# Direct connection (port 5432) may fail on Render due to IPv6.
# DATABASE_URL=postgresql://postgres.xxxxx:password@aws-0-region.pooler.supabase.com:5432/postgres

# === Server ===
PORT=5000
NODE_ENV=development

# === JWT ===
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production
JWT_EXPIRES_IN=7d

# === CORS ===
FRONTEND_URL=http://localhost:5173

# === Production (set in Render dashboard, not here) ===
# NODE_ENV=production
# FRONTEND_URL=https://your-vercel-domain.vercel.app
# DATABASE_URL=<supabase session pooler URL>
# JWT_SECRET=<long random string>
